@model IEnumerable<LoginUser>

<html>

<body>

    <table >

        <tr>
            <th>UserID</th>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone no</th>
            <th>Available</th>
            <th>Created by</th>
            <th>Created Date</th>
            <th>update</th>
            <th>Delete</th>


        </tr>

        @foreach (var x in Model)
        {
           <tr>  <td>@x.UserID</td>
            <td>@x.UserName</td>
            <td>@x.Email</td>
            <td>@x.Phone</td>
            <td>@x.IsActive</td>
            <td >@x.CreatedBy</td>
            <td>@x.CreatedDate</td>
           
            <td style="background-color:antiquewhite">
                <div>
                  <a asp-controller="User" asp-action="Delete" asp-route-id="@x.UserID" class="btn btn-danger"> Delete </a>
                </div>
            </td>

                <td style="background-color:antiquewhite">
                <div>
                    <a asp-action="Update" asp-controller="User" asp-route-id="@x.UserID" class="btn btn-info">Update</a>
                </div>
            </td>

            </tr>
        }
       

      

    </table>

</body>
<style>
    table, tr {
        width: 100%;
        border: 1px solid black;
        background-color:burlywood;
    }

    td {
        border: 1px solid black;
    }

        td:hover {
            border: 1px solid black;
            background-color: antiquewhite;
            box-shadow: 2px 2px 1px 1px black;
        }

    tr:hover {
        border: 1px solid black;
        background-color: sandybrown;
        box-shadow: 1px 1px 1px 1px black;
    }
</style>
</html>