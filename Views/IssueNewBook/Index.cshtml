@model MambaUser.Models.IssueBook

<form asp-action="Index" method="post">
    <div class="form-group">
        <label>User</label>
        <select asp-for="UserID" class="form-control" asp-items="ViewBag.Users">
            <option value="">-- Select User --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Book</label>
        <select asp-for="BookID" class="form-control" asp-items="ViewBag.Books">
            <option value="">-- Select Book --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Issue Date</label>
        <input asp-for="IssueDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Issue Book</button>
</form>
